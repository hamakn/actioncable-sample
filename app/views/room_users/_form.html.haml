= form_for @room_user do |f|
  - if @room_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room_user.errors.count, "error")} prohibited this room_user from being saved:"
      %ul
        - @room_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :room_id
    = f.text_field :room_id
  .field
    = f.label :user_id
    = f.text_field :user_id
  .actions
    = f.submit 'Save'
